generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("MONGODB_URI")
}

model User{
   id                   String   @id @default(auto()) @map("_id") @db.ObjectId
   email                String   @unique
   password             String
   name                 String
   resetToken           String?  
   resetTokenExpiry     DateTime? 

}
model Allowlist{
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  email               String   @unique
  read                Boolean
  write               Boolean
}

model Students{
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  name                String
  email               String   @unique
  courseenrolled      String
  courseenrolleddate  DateTime
  coursecompleted     Boolean
  coursecompleteddate DateTime?
  coursecompletedgrade String?
}

model Orders{
  id                  String   @id @default(auto()) @map("_id") @db.ObjectId
  orderid             String
  amount              Int
  status              String
  customer_name       String
  Email               String
  Phone_No            String
  Country             String
  State               String
  Zip_Code            String
  Address             String

}

